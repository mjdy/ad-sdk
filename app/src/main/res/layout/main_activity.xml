<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>


    <com.mobjump.mjadsdk.view.MJBannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.mobjump.mjadsdk.view.MJBannerView>

    <Button
        android:id="@+id/btn_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 开屏广告" />


    <Button
        android:id="@+id/btn_interteristal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 插屏广告" />

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 Banner广告" />

    <Button
        android:id="@+id/btn_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 信息流广告" />

    <Button
        android:id="@+id/btn_third_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 第三方adapter信息流广告" />

    <Button
        android:id="@+id/btn_custom_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示 自定义的信息流广告" />
</LinearLayout>